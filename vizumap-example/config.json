        {
          "id": "vizumap1",
          "prompt": "Which area are you certain has a high poverty rate.",
          "required": true,
          "location": "sidebar",
          "type": "radio",
          "options": [
            {
              "label": "Dark Grey",
              "value": "Dark Grey"
            },
            {
              "label": "Yellow",
