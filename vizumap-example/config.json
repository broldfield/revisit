          "mapFileLocation": "./assets/gg_bi_map.html",
          "keyFileLocation": "./assets/gg_bi_key.html",
          "mapTitle": "Map showing USA poverty by region.",
          "keyTitle": "Key for USA poverty map.",
          "height": "500",
          "width": "900",
          "keyHeight": "200",
          "keyWidth": "200"
        },
        "taskid": "vizumap1"
      },
      "nextButtonLocation": "belowStimulus",
